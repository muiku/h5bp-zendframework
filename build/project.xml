<?xml version="1.0"?>
<!DOCTYPE project>
<project name="Project Build" default="build" basedir="../">
    
    <!-- Use this file to define any custom build targets (for example, automatically deploying via FTP). -->

    <var name="dir.zf.layouts" value="../application/layouts/scripts/"/>
    <var name="file.zf.layouts" value="layout.phtml"/>

    <target name="-pre-zfint">
        <echo message="Retreaving Zend Framework layouts..."/>
        <copy todir="${dir.source}" overwrite="${needhtmlrefresh}">
            <fileset dir="${dir.zf.layouts}" includes="${file.zf.layouts}"/>
        </copy>
    </target>

    <target name="-post-zfint">
        <echo message="Moving builded Zend Framework layouts..."/>
        <mkdir dir="${dir.zf.layouts}/publish"/>
        <move todir="${dir.zf.layouts}/publish">
            <fileset dir="${dir.publish}" includes="${file.zf.layouts}"/>
        </move>
        <delete>
            <fileset dir="${dir.source}" includes="${file.zf.layouts}"/>
        </delete>
    </target>

</project>
